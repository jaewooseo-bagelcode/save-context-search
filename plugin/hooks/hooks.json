{
  "description": "SCS: Auto-refresh index + inject project map for AI context",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh",
            "timeout": 60,
            "statusMessage": "Loading project map..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"${CLAUDE_PLUGIN_ROOT}/bin/scs\" refresh --quiet 2>/dev/null || true'",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
