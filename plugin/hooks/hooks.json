{
  "description": "SCS: Auto-refresh index + inject project map for AI context",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/scs refresh --quiet",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/scs map",
            "timeout": 10,
            "statusMessage": "Loading project map..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/scs refresh --quiet",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
